{#
/**
 * @file
 * Theme override to display an HC Page node.
 */
#}

{# Internal Page Hero #}
{% if show_hero_image %}
  {% include parent_include_directory ~ '/templates/_includes/global/content_header.html.twig' %}
{% else %}
  {% include parent_include_directory ~ '/templates/_includes/global/content_header_no_image.html.twig' %}
{% endif %}

<section class="section--padded-top{{not node.isPublished() ? ' node--unpublished'}}">
  <div class="compartment">
  {{ content.content_moderation_control }}
      <div class="silc-grid silc-grid--collapse">
        {# Sidebar #}
        {% if show_sidebar %}
          <div class="silc-grid__col silc-grid__col--2-large">
            <aside class="sidebar">
              {{ page_sidebar }}
            </aside>
          </div>
          <div class="silc-grid__col silc-grid__col--10-large kitchen-sink--main-col">
        {% else %}
          <div class="silc-grid__col silc-grid__col--12-large kitchen-sink--main-col">
        {% endif %}
            {% if content.field_hc_lead_in|render  %}
              <p class="lead-in">{{ content.field_hc_lead_in }}</p>
            {% endif %}
            {# Main KS content #}
            {{ content.field_hc_ks_widgets }}
          </div>
      </div>
  </div>
</section>

{# Rounding out the page #}
{{ content.field_hc_ks_widgets_full }}

{# Render without, so quickedit/etc works #}
{{ content|without('field_hc_site_access', 'content_moderation_control','field_hc_lead_in', 'field_hc_header_image', 'field_hc_hide_header_image', 'field_hc_ks_widgets', 'field_hc_ks_widgets_full', 'field_hc_hide_sidebar', 'field_hc_hide_for_nonhoward') }}

